{
  "manifest_version": 3,
  "name": "edX Adblock",
  "version": "1.0",
  "description": "Hide unwanted edX ads and popups for upgrade",
  "permissions": [
    "storage", "activeTab"
  ],
  "icons": {
    "16": "images/icon_16x16.png",
    "32": "images/icon_32x32.png",
    "48": "images/icon_48x48.png",
    "128": "images/icon_128x128.png"
  },
  "action" : {
    "default_popup": "pages/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.edx.org/course*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}